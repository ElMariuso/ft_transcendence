{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": [
    "src/**/__tests__/*",
    "src/**/*.vue.js"
  ],
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "baseUrl": ".",
    "target": "es2015",
    "lib": ["dom", "es2015"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
