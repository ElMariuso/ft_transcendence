#!/bin/bash

case $1 in
    start)
        docker-compose up --build -d
        ;;
    stop)
        docker-compose down
        ;;
    restart)
        docker-compose down
        docker-compose up --build -d
        ;;
    clean-volumes)
        rm -rf database logs uploads
        ;;
    remove-volumes)
        docker-compose down -v
        ;;
    remove-images)
        docker-compose down --rmi all
        ;;
    *)
        echo "Usage: $0 {start|stop|restart|clean-volumes}"
        exit 1
esac