#!/bin/bash

case $1 in
    start)
        docker-compose up --build -d
        ;;
    stop)
        docker-compose down
        ;;
    restart)
        docker-compose down
        docker-compose up --build -d
        ;;
    clean-volumes)
        rm -rf database backend/dist
        ;;
    *)
        echo "Usage: $0 {start|stop|restart|clean-volumes}"
        exit 1
esac